[user]
	name = Adrian Zgorza≈Çek
	email = a.zgorzalek@gmail.com
[color]
	ui = auto
[core]
	editor = vim
        pager = less -FS
[diff]
	tool = vimdiff
[alias]
	st = status
	ci = commit -p -m
	br = branch
	co = checkout
	cob = checkout -b
	df = diff
	lg = log -p
	d = difftool
[difftool]
	prompt = false
[merge]
	tool = threesome
[mergetool "threesome"]
	cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
	trustExitCode = true
